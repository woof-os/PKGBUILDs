pkgname="woof-vim-config"
pkgdesc="Woof's vim configuration files for Woof OS"
pkgver="1.0.0"
pkgrel=1
arch=('any')
license=('MIT')
depends=('vim')
source=('https://github.com/woof-os/vim/archive/refs/tags/v1.0.0.tar.gz')

sha256sums=("SKIP")

package() {
	cd vim-$pkgver
	install -Dm755 .vimrc $pkgdir/etc/skel/.vimrc
	cp -r .vim $pkgdir/etc/skel/.vim
}

