pkgname="woof-rofi-config"
pkgdesc="Woof's Rofi configuration files for Woof OS"
pkgver="2.0.0"
pkgrel=1
arch=('any')
license=('MIT')
depends=('rofi')
source=('https://github.com/woof-os/rofi/archive/refs/tags/v2.0.0.tar.gz')

sha256sums=("SKIP")

package() {
	cd rofi-$pkgver
	for x in `find . -maxdepth 1 -not -type d`; do
		install -Dm755 $x $pkgdir/etc/skel/.config/rofi/$x
	done
}

