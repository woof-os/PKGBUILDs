pkgname="woof-calamares-config"
pkgdesc="Woof's Calamares configuration files for Woof OS"
pkgver="2.4.1"
pkgrel=1
arch=('any')
license=('MIT')
depends=('calamares')
source=('https://github.com/woof-os/calamares/archive/refs/tags/v2.4.1.tar.gz')

sha256sums=("SKIP")

package() {
	cd calamares-$pkgver
	for x in `find . -not -type d`; do
		install -Dm755 $x $pkgdir/etc/calamares/$x
	done
}

